%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Titelseite %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{title page}
{%
\setlength{\unitlength}{1mm}
\begin{picture}(254,190.5)(17.4,0) % Ursprung (0,0) minus linke Marginalie
  % Hintergrundbild
  \put(0,0){%
    \pgfuseimage{titelbild}
  }
  \put(17.4,92){%
    \begin{minipage}[c][65mm][t]{226mm}
	\vspace{\fill}
	\begin{center}
		\usebeamerfont{title}{\inserttitle}
		\vspace{7mm}
		% Achtung, hier kein \newline oder \\ verwenden, nur \par
		% Ansonsten zerschie√üt irgendwas das centering
		\ifx\insertauthor\empty\else
			\par \fontsize{16}{22}\selectfont\insertauthor
		\fi
		\ifx\insertdate\empty\else
			\par \fontsize{16}{22}\selectfont \insertdate
		\fi
	\end{center}
	\vspace{\fill}
    \end{minipage}
  }
\end{picture}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%% Titelseite Ende %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


